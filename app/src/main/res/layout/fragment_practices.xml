<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_practices_swipe"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_practices_tv_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="正在同步......"/>
            <TextView
                android:id="@+id/fragment_practices_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="2019年4月23日17:01:30"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <ListView
                    android:id="@+id/fragment_practices_lv"
                    android:layout_width="match_parent"
                    android:divider="@null"
                    android:dividerHeight="10dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/fragment_practices_tv"
                    android:layout_width="match_parent"
                    android:text="请下拉刷新数据"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </FrameLayout>

        </LinearLayout>





</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>